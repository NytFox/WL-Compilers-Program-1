char *revise(char* str)
{	
	if(ReplaceStr(str,">","<=")
		return str;
	elseif(ReplaceStr(str,"<",">=")
		return str;
	elseif(ReplaceStr(str,">=","<")
		return str;
	elseif(ReplaceStr(str,"<=",">")
		return str;
	elseif(ReplaceStr(str,"==","!=")
		return str;
	elseif(ReplaceStr(str,"!=","==")
		return str;
	else
		return str;
}
